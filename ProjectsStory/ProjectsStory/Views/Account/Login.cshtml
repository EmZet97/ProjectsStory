@model ProjectsStory.Models.LoginModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout_Empty.cshtml";
}


<div id="LoginPanel" class="col-md-8 col-sm-12 col-md-offset-2">
    <h1 id="PanelTitle">PORTFOL.IO</h1>
    <h4 id="PanelSubtitle">Show your creativity</h4>
    <br/>
    <br/>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <h5 id="ErrorMessage">@ViewBag.ErrorMessage</h5>
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">                
                <div class="col-sm-8 col-sm-offset-2">
                    <p class="input-label">Email:</p>
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control data-input" } })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-8 col-sm-offset-2">
                    <p class="input-label">Password:</p>
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control data-input" } })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-8">
                    <input type="submit" value="Login" class="btn btn-default"  id="ActionButton" />
                </div>
            </div>
        </div>
    }

    <div id="RedirectActionButton" class="col-sm-offset-4 col-sm-4">
        @Html.ActionLink("Register", "Register")
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
